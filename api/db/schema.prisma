datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model PickupLocation {
  id   Int    @id @default(autoincrement())
  name String

  Item Item[]
}

model DeliverLocation {
  id   Int    @id @default(autoincrement())
  name String

  Order Order[]
}

model Item {
  id               String         @id
  name             String         @unique
  pickupLocationId Int
  pickupLocation   PickupLocation @relation(references: [id], fields: [pickupLocationId])

  Order Order[]
}

model Order {
  id                Int       @id @default(autoincrement())
  deliverLocationId Int
  itemId            String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  claimedAt         DateTime?
  claimedBy         String?
  fulfilledAt       DateTime?

  deliverLocation DeliverLocation @relation(references: [id], fields: [deliverLocationId])
  item            Item            @relation(references: [id], fields: [itemId])
}

model RW_DataMigration {
  version    String   @id
  name       String
  startedAt  DateTime
  finishedAt DateTime
}
